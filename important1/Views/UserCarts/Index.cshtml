@model IEnumerable<important1.Models.Cart>

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a asp-area="" asp-controller="UserBooks" asp-action="Index" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            @ViewData["Title"]
             <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </span>
        <a asp-area="" asp-controller="UserOrders" asp-action="Index" class="stext-109 cl8 hov-cl1 trans-04">
            Order history
        </a>
    </div>
</div>


<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-8 m-lr-auto m-b-50">
                <div class="m-l-25 m-r--38 m-lr-0-xl">
                    <div class="wrap-table-shopping-cart">
                        <table class="table-shopping-cart">
                            <tr class="table_head">
                                <th class="column-1">Book</th>
                                <th class="column-1"></th>
                                <th class="column-1">Price</th>
                                <th class="column-1">Quantity</th>
                                <th class="column-1">Total</th>
                                <th class="column-1"></th>
                               


                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr class="table_row">
                                    <td class="column-1">
                                        <div class="how-itemcart1">
                                            <img src="@("~/img/" + item.Book!.Thumb)" asp-append-version="true" style="max-width: 60px" alt="">
                                        </div>
                                    </td>
                                    <td class="column-2">@item.Book.Title</td>
                                    <td class="column-1">@item.Book.Price</td>
                                    <td class="column-1" style="text-align:center;">@item.Quantity</td>
                                    <td class="column-1">
                                        @(item.Quantity * item.Book.Price)
                                    </td>
                                    <td class="text-right" >
                                        <a class="btn btn-icon btn-hover btn-sm btn-rounded pull-right" asp-action="Edit" asp-route-uid="@item.UId" asp-route-bid="@item.BookIsbn">
                                       
                                        <i class="anticon anticon-edit"></i>
                                       
                                        </a>
                                    </td>

                                    <td class="text-right">
                                        <a class="btn btn-icon btn-hover btn-sm btn-rounded"  asp-action="Delete" asp-route-uid="@item.UId" asp-route-bid="@item.BookIsbn" >
                                        
                                        <i class="anticon anticon-delete"></i>
                                      
                                        </a>
                                    </td>
                                   

                              
                                </tr>

                            }



                        </table>
                    </div>

                    <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
                        <div class=" flex-c-m ">
                            <p> Tổng tiền:@Model.Sum(c => c.Book.Price * c.Quantity) </p>
                        </div>

                        <div class="flex-c-m stext-101 cl0 size-115 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer" >
                            <a style="color:white;" asp-controller="UserBooks" asp-action="Checkout"> Check Out</a>    
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>





